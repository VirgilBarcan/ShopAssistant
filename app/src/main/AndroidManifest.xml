<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="barcan.virgil.com.shopassistant" >

    <uses-sdk android:minSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".frontend.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".frontend.regular.UserMainScreenActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".frontend.regular.UserRegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".frontend.company.CompanyRegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".frontend.ShowProductActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".frontend.LocationActivity"
            android:label="@string/app_name" >
        </activity>

        <service android:name=".backend.service.GeofenceIntentService" />
        <service
            android:name=".backend.service.LocationService"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="barcan.virgil.com.shopassistant.backend.service" />
            </intent-filter>
        </service>

        <receiver android:name=".backend.service.LocationReceiver" />

        <activity
            android:name=".frontend.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
