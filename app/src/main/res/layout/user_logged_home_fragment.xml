<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1" >

        <Button
            android:id="@+id/buttonSearchByCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Category" />

        <Button
            android:id="@+id/buttonSearchByShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search by Shop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFavouriteCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_weight="2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Favourite Categories" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewFavouriteCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <barcan.virgil.com.shopassistant.frontend.customview.CategoryButton
                    android:id="@+id/categoryButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:elevation="4dp" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <barcan.virgil.com.shopassistant.frontend.customview.CategoryButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:categoryImageSrc="@mipmap/product_image"
                    app:categoryName="Smartphone"
                    android:background="#FFFFFF"
                    android:elevation="4dp" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <barcan.virgil.com.shopassistant.frontend.customview.CategoryButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:categoryImageSrc="@mipmap/product_image"
                    app:categoryName="Smartphone"
                    android:background="#FFFFFF"
                    android:elevation="4dp" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <barcan.virgil.com.shopassistant.frontend.customview.CategoryButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:categoryImageSrc="@mipmap/product_image"
                    app:categoryName="Smartphone"
                    android:background="#FFFFFF"
                    android:elevation="4dp" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <barcan.virgil.com.shopassistant.frontend.customview.CategoryButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:categoryImageSrc="@mipmap/product_image"
                    app:categoryName="Smartphone"
                    android:background="#FFFFFF"
                    android:elevation="4dp" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <barcan.virgil.com.shopassistant.frontend.customview.CategoryButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:categoryImageSrc="@mipmap/product_image"
                    app:categoryName="Smartphone"
                    android:background="#FFFFFF"
                    android:elevation="4dp" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutShoppingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_weight="2" >

        <TextView
