<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32575757" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layoutMode="clipBounds"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:minHeight="60dp"
            android:maxHeight="60dp" >
            
            <ImageView
                android:id="@+id/imageViewProductImageSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:src="@drawable/ic_product_image"
                android:minWidth="100dp"
                android:maxWidth="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#faf5f8"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="marquee"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/textViewProductCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Category"
                android:textSize="12dp"
                android:textColor="#faf5f8"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/textViewCompanySelling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Selling"
                android:textSize="12dp"
                android:textColor="#faf5f8"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="right"
                android:text="Price"
                android:textSize="13dp"
                android:textColor="#fa4343"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>